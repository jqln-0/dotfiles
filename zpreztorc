#
# Jacqui's .zpreztorc! Turns on my fancy modules.
#

# Make everything nice colours.
zstyle ':prezto:*:*' color 'yes'

# Load all my modules. Note order matters. Remember to read the docs
# before changing.
zstyle ':prezto:load' pmodule   \
  'environment'                 \
  'history'                     \
  'spectrum'                    \
  'utility'                     \
  'completion'                  \
  'git'                         \
  'syntax-highlighting'         \
  'history-substring-search'    \
  'prompt'

#
# Module Options
#

# prompt
zstyle ':prezto:module:prompt' theme 'jacqui'

# syntax-highlighting
zstyle ':prezto:module:syntax-highlighting' highlighters \
  'main'      \
  'brackets'  \
  'root'

# By default the syntax highlighting is way too crazy colourful. Redefine most
# things to unhighlighted so that I can decide which specific things I want
# colourful.
zstyle ':prezto:module:syntax-highlighting' styles  \
  'default'                       'none'            \
  'unknown-token'                 'fg=red,bold'     \
  'reserved-word'                 'fg=magenta,bold' \
  'alias'                         'none'            \
  'builtin'                       'none'            \
  'function'                      'none'            \
  'command'                       'none'            \
  'precommand'                    'none'            \
  'commandseparator'              'none'            \
  'hashed-command'                'none'            \
  'path'                          'none'            \
  'path_prefix'                   'underline'       \
  'globbing'                      'fg=yellow,bold'  \
  'history-expansion'             'none'            \
  'single-hyphen-option'          'none'            \
  'double-hyphen-option'          'none'            \
  'back-quoted-argument'          'none'            \
  'single-quoted-argument'        'fg=green,bold'   \
  'double-quoted-argument'        'fg=green,bold'   \
  'dollar-double-quoted-argument' 'fg=yellow,bold'  \
  'back-double-quoted-argument'   'fg=yellow,bold'  \
  'assign'                        'none'

